{
  "name": "phaser-homepage",
  "version": "0.0.1",
  "private": true,
  "description": "Personal homepage built using phaser",
  "repository": {
    "type": "git",
    "url": "git@github.com:technoY2K/phaser-homepage.git"
  },
  "scripts": {
    "build": "craco build",
    "start": "craco start",
    "test": "craco test",
    "format": "npx prettier --write ./src/**/*",
    "lint": "npx eslint ./src/**/*"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "react",
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "tabWidth": 4
        }
      ],
      "indent": [
        "error",
        4
      ],
      "react/react-in-jsx-scope": "off"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "prettier": {
    "tabWidth": 4
  },
  "dependencies": {
    "@craco/craco": "^7.0.0-alpha.7",
    "@reduxjs/toolkit": "^1.8.3",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.45",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^4.2.1",
    "phaser": "^3.55.2",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.5",
    "typescript": "^4.7.4",
    "web-vitals": "^2.1.4"
  }
}